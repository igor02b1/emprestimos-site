@{
   ViewData["title"] = "Cadastrar Empréstimo";  
}

<div class="container bg-black p-5 rounded-3">

    <div class="mb-2 text-center">
        <h1 class="text-light">Cadastro de Empréstimo</h1>
    </div>

    <form>
        <div class="mb-3">
            <label for="Recebedor" class="form-label text-light">Recebedor:</label>
            <input type="text" class="form-control" id="Recebedor" placeholder="Quem está recebendo o livro?">
        </div>

        <div class="mb-3">
            <label for="Fornecedor" class="form-label text-light">Fornecedo:</label>
            <input type="text" class="form-control" id="Fornecedor" placeholder="Quem está emprestando o livro?">
        </div>

        <div class="mb-3">
            <label for="Livro" class="form-label text-light">Livro:</label>
            <input type="text" class="form-control" id="Livro" placeholder="Qual livro está sendo emprestado?">
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-success w-50">Adicionar</button>
            <a class="btn btn-primary w-50" asp-controller="Emprestimo" asp-action="Emprestimo">Voltar</a>
        </div>
    </form>
</div>